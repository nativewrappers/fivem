{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./lib",
    "declarationDir": "./lib",
    "target": "es2022",
    "lib": ["es2022", "esnext.decorators", "esnext.disposable"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "types": ["@citizenfx/server", "@citizenfx/client", "@types/node"],
    "paths": {
      "@common/*": ["./common/*"]
    }
  },
  "include": [],
  "exclude": ["lib", "**/examples/"],
  "references": [{ "path": "./src/common" }, { "path": "./src/server" }, { "path": "./src/fivem" }, { "path": "./src/redm" }]
}
