		"./server": "./lib/server/index.js",
		"./client": "./lib/server/index.js"
	},
	"sideEffects": [
		"./client/src/models/**"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/nativewrappers/fivem-client.git"
	},
	"bugs": {
		"url": "https://github.com/nativewrappers/fivem-client/issues"
